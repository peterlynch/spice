<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.sonatype.runtime</groupId>
    <artifactId>sonatype-runtime</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <artifactId>sonatype-runtime-jetty</artifactId>
  <packaging>jar</packaging>
  <version>0.8-SNAPSHOT</version>
  <name>Sonatype Runtime :: Plexus</name>
  <properties>
    <distro>${basedir}/target/${artifactId}-${version}</distro>
    <applicationId>application</applicationId>
    <applicationName>My Application</applicationName>
    <mainClass>org.codehaus.plexus.classworlds.launcher.Launcher</mainClass>
    <excludeArtifacts>jsw-binaries,junit,aspectjrt</excludeArtifacts>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.mortbay.jetty</groupId>
      <artifactId>jetty</artifactId>
      <version>6.1.15</version>
    </dependency>
    <dependency>
      <groupId>org.mortbay.jetty</groupId>
      <artifactId>jetty-ssl</artifactId>
      <version>6.1.15</version>
    </dependency>
    <dependency>
      <groupId>org.mortbay.jetty</groupId>
      <artifactId>jetty-util</artifactId>
      <version>6.1.15</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.0</version>
        <executions>
          <execution>
            <id>libs</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${distro}/lib</outputDirectory>
              <excludeArtifactIds>${excludeArtifacts}</excludeArtifactIds>
            </configuration>
          </execution>
          <execution>
            <id>jsw</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeArtifactIds>jsw-binaries</includeArtifactIds>
              <outputDirectory>${distro}/bin/jsw</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.sonatype.plexus.template</groupId>
        <artifactId>plexus-template</artifactId>
        <version>0.8</version>
        <executions>
          <execution>
            <goals>
              <goal>render</goal>
            </goals>
            <configuration>
              <templates>
                <template>
                  <source>${basedir}/src/main/templates/runtime/jetty/wrapper-jetty.conf</source>
                  <target>${distro}/conf/wrapper.conf</target>
                </template>
                <template>
                  <source>${basedir}/src/main/templates/jsw/bin/sh.script.in</source>
                  <target>${distro}/bin/plexus.sh</target>
                  <perms>+x</perms>
                </template>
              </templates>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>