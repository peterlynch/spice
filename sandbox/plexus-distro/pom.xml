<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.sonatype.plexus.distro</groupId>
  <artifactId>plexus-distro</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>plexus-distro</name>
  <url>http://maven.apache.org</url>
  <properties>
    <distro>${basedir}/target/${artifactId}-${version}</distro>
    <applicationId>application</applicationId>
    <applicationName>My Application</applicationName>
    <mainClass>org.codehaus.plexus.classworlds.launcher.Launcher</mainClass>
  </properties>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.0</version>
        <executions>
          <execution>
            <id>libs</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${distro}/lib</outputDirectory>
              <excludeArtifactIds>jsw-binaries,junit,aspectjrt</excludeArtifactIds>
            </configuration>
          </execution>
          <execution>
            <id>jsw</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeArtifactIds>jsw-binaries</includeArtifactIds>
              <outputDirectory>${distro}/bin/jsw</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.sonatype.plexus.template</groupId>
        <artifactId>plexus-template</artifactId>
        <version>1.0-SNAPSHOT</version>
        <executions>
          <execution>
            <goals>
              <goal>render</goal>
            </goals>
            <configuration>
              <templates>
                <template>
                  <source>${basedir}/src/main/templates/plexus/classworlds.conf</source>
                  <target>${distro}/conf/classworlds.conf</target>
                </template>
                <template>
                  <source>${basedir}/src/main/templates/jsw/conf/wrapper.conf</source>
                  <target>${distro}/conf/wrapper.conf</target>
                </template>
                <template>
                  <source>${basedir}/src/main/templates/jsw/bin/sh.script.in</source>
                  <target>${distro}/bin/plexus.sh</target>
                  <perms>+x</perms>
                </template>
              </templates>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <!-- We need the container -->
    <dependency>
      <groupId>org.codehaus.plexus</groupId>
      <artifactId>plexus-container-default</artifactId>
      <version>1.0-beta-2-SNAPSHOT</version>
    </dependency>
    <!-- We need a way to boot the container -->
    <dependency>
      <groupId>org.sonatype.appbooter.plexus-booters</groupId>
      <artifactId>plexus-jsw-app-booter</artifactId>
      <version>1.6.1</version>
    </dependency>
    <!-- We need a way to start start/monitor the booter -->
    <dependency>
      <groupId>org.sonatype.jsw-binaries</groupId>
      <artifactId>jsw-binaries</artifactId>
      <version>3.2.3.3</version>
      <type>tar.gz</type>
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>