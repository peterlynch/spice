        </dependency>
        <dependency>
        	<groupId>org.sonatype.spice</groupId>
        	<artifactId>plexus-ehcache</artifactId>
        	<version>1.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
