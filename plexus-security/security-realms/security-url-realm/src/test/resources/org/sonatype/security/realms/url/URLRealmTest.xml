<plexus>
	<components>
		<component>
			<role>org.sonatype.jettytestsuite.ServletServer</role>
			<implementation>
				org.sonatype.jettytestsuite.ServletServer
			</implementation>
			<configuration>
				<port>12345</port><!--  This should be auto assigned  -->
				<webappContexts>					
					<webappContext>
						<name>auth_app</name>
						<authenticationInfo>
							<authMethod>BASIC</authMethod>
							<credentialsFilePath>
								${basedir}/target/test-classes/credentials.properties
							</credentialsFilePath>
						</authenticationInfo>
						<servletInfos>
							<servletInfo>
								<mapping>/*</mapping>
								<servletClass>
									org.mortbay.jetty.servlet.DefaultServlet
								</servletClass>
								<parameters>
									<property>
										<name>resourceBase</name>
										<!-- This could be any valid path, we are just trying to authenticate -->
										<value>
											${basedir}/target/test-classes/
										</value>
									</property>
									<property>
										<name>dirAllowed</name>
										<value>true</value>
									</property>
								</parameters>
							</servletInfo>
						</servletInfos>
					</webappContext>
				</webappContexts>
			</configuration>
		</component>
	</components>
</plexus>
