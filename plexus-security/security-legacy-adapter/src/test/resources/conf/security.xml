<?xml version="1.0" encoding="UTF-8"?>
<security>
  <version>2.0.2</version>

  <privileges>
    <privilege>
      <id>5</id>
      <type>method</type>
      <name>Repositories - (create,read)</name>
      <description>Give permission to create,read new repositories.
      </description>
      <properties>
        <property>
          <key>method</key>
          <value>create,read</value>
        </property>
        <property>
          <key>permission</key>
          <value>nexus:repositories</value>
        </property>
      </properties>
    </privilege>
  </privileges>

  <roles>

    <role>
      <id>admin</id>
      <name>Administration</name>
      <description>Gives access everything</description>
      <sessionTimeout>60</sessionTimeout>
      <privileges>
        <privilege>5</privilege>
      </privileges>
    </role>
  </roles>


  <userRoleMappings>
    <userRoleMapping>
      <userId>admin-simple</userId>
      <source>Simple</source>
      <roles>
        <role>admin</role>
      </roles>
    </userRoleMapping>
    <userRoleMapping>
      <userId>deployment-simple</userId>
      <source>Simple</source>
      <roles>
        <role>deployment</role>
        <role>repo-all-full</role>
      </roles>
    </userRoleMapping>
    <userRoleMapping>
      <userId>anonymous-simple</userId>
      <source>Simple</source>
      <roles>
        <role>anonymous</role>
        <role>repo-all-read</role>
      </roles>
    </userRoleMapping>
  </userRoleMappings>
</security>
