<plexus>
    <components>
        <component>
            <role>org.sonatype.plexus.webcontainer.ServletContainer
            </role>
            <implementation>
                org.sonatype.plexus.webcontainer.DefaultServletContainer
            </implementation>
            <configuration>
                <jettyXml>${jetty.xml}</jettyXml>
				<!-- Used if no connectors given -->
                <host>localhost</host>
				<!-- Used if no connectors given -->
                <port>${default-jetty-port}</port>
				<!-- Uses WebAppDeployer to deploy all discovered WAR/Webapps -->
                <webapps>
                    <webapp>
                        <warPath>${basedir}/src/test/webapps
                        </warPath>
                        <contextPath>/webapp0</contextPath>
                    </webapp>
                    <webapp>
                        <warPath>${basedir}/src/test/webapps/monkey.war
                        </warPath>
                        <webappDir>${basedir}/target/monkey
                        </webappDir>
                        <contextPath>/monkey</contextPath>
                    </webapp>
                </webapps>
                <handlers>
                    <handler>
                        <clazz> org.mortbay.jetty.handler.DefaultHandler
                        </clazz>
                    </handler>
                </handlers>
            </configuration>
        </component>
    </components>
</plexus>
