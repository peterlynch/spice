<plexus>
  <components>
    <component>
      <role>org.sonatype.plexus.webcontainer.SomeComponent</role>
      <implementation> org.sonatype.plexus.webcontainer.ComponentJettyHandler</implementation>
    </component>
    <component>
      <role>org.sonatype.plexus.webcontainer.ServletContainer</role>
      <implementation> org.sonatype.plexus.webcontainer.DefaultServletContainer</implementation>
      <configuration>
		<!-- Not used if connectors given -->
        <defaultHost>localhost</defaultHost>
        <defaultPort>8081</defaultPort>
        <connectors>
          <connector>
            <clazz>org.mortbay.jetty.nio.SelectChannelConnector</clazz>
            <host>localhost</host>
            <port>8088</port>
          </connector>
          <connector>
            <clazz>org.mortbay.jetty.LocalConnector</clazz>
          </connector>
        </connectors>
        <!-- 
        <handlers>
          <handler>
            <role>org.sonatype.plexus.jetty.SomeComponent</role>
          </handler>
          <handler>
            <clazz> org.sonatype.plexus.jetty.MockRestletHandler(#server)</clazz>
          </handler>
        </handlers>
        -->
        <webapps>
          <webapp>
            <warPath>${basedir}/src/test/webapps/webapp0</warPath>
            <contextPath>/webapp0</contextPath>
          </webapp>
        </webapps>
      </configuration>
    </component>
  </components>
</plexus>