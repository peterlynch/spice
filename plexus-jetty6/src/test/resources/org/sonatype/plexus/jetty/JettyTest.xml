<plexus>
	<components>
		<component>
			<role>org.sonatype.plexus.jetty.SomeComponent</role>
			<implementation>
				org.sonatype.plexus.jetty.ComponentJettyHandler
			</implementation>
		</component>
		<component>
			<role>org.sonatype.plexus.jetty.ServletContainer</role>
			<implementation>
				org.sonatype.plexus.jetty.DefaultServletContainer
			</implementation>
			<configuration>
				<!-- Not used if connectors given -->
				<defaultHost>localhost</defaultHost>
				<defaultPort>${test-connector-port}</defaultPort>
				<connectorInfos>
					<connectorInfo>
						<clazz>
							org.mortbay.jetty.nio.SelectChannelConnector
						</clazz>
						<host>localhost</host>
						<port>${default-jetty-port}</port>
					</connectorInfo>
					<connectorInfo>
						<clazz>org.mortbay.jetty.LocalConnector</clazz>
					</connectorInfo>
				</connectorInfos>
				<handlerInfos>
					<handlerInfo>
					    <role>org.sonatype.plexus.jetty.SomeComponent</role>
					</handlerInfo>
					<handlerInfo>
						<clazz>
							org.sonatype.plexus.jetty.MockRestletHandler(#server)
						</clazz>
					</handlerInfo>
				</handlerInfos>
				<webappInfos>
					<webappInfo>
						<warPath>
							${basedir}/src/test/webapps/webapp0
						</warPath>
						<contextPath>/webapp0</contextPath>
					</webappInfo>
				</webappInfos>
			</configuration>
		</component>
	</components>
</plexus>
